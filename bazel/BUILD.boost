cc_library(
    name = "all",
    hdrs = glob(
        ["boost/**/*"],
        exclude = ["boost/**/*.cpp"],
    ),
    include_prefix = "boost",
    includes = ["boost"],
    strip_include_prefix = "boost",
    visibility = ["//visibility:public"],
    deps = [],
)

cc_library(
    name = "context",
    srcs = ["libboost_context.a"],
    hdrs = glob(
        [
            "boost/context.hpp",
            "boost/context/**/*.h",
            "boost/context/**/*.hpp",
        ],
    ),
    visibility = ["//visibility:public"],
    deps = [
        ":all",
    ],
)

genrule(
    name = "build_boost_context",
    srcs = glob(
        [
            "Jamroot",
            "**/Jamfile*",
            "**/*.jam",
            "**/*.cpp",
            "**/*.c",
            "**/*.S",
            "**/*.hpp",
            "project-config.jam",
        ],
        exclude = [
            "bazel-*",
            "libs/wave/test/**/*",
        ],
    ) + [
        "project-config.jam",
    ],
    outs = [
        "libboost_context.a",
    ],
    cmd = """
        ROOT=$$(dirname $(location Jamroot))
        cp $(location project-config.jam) $$ROOT
        pushd $$ROOT
            ../../$(location b2) libboost_context.a
        popd

        cp $$ROOT/stage/lib/libboost_context.a $(location libboost_context.a)
    """,
    tools = ["b2"],
)

